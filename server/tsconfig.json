{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "lib": ["es2020", "dom"],
    "sourceMap": true,
    "esModuleInterop": true,
    "plugins": [
      { "transform": "typescript-is/lib/transform-inline/transformer" }
    ],
    "types": ["node"]
  },
  "exclude": ["node_modules"]
}
